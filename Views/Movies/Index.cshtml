@model List<Movie>

@{
    ViewData["Title"] = "Movies";
}
<h2>
    <i class="bi bi-film"></i>
    Movies</h2>
<hr />

<div class="mt-4">
    @if(!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-circle"></i>
            No movies founded!
        </div>

                @*<img src="\images\@item.Poster" width="100px" />*@
    }
    else
    {
       <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-2">
                                <img src="\images\@item.Poster" width="150px" />
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h5 class="card-title">@item.Title (@item.Year)</h5>
                                        <p class="card-text text-justify">@(item.storeline.Length > 500 ? $"{item.storeline.Substring(0,500)}..." : item.storeline)</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-3">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <small class="text-muted">@item.Rate.ToString("0.0")</small>
                                        </p>
                                        <div>
                                            <a asp-action="Details" asp-controller="Movies" asp-route-id="@item.Id" class="btn btn-secondary">
                                                <i class="bi bi-camera-reels"></i>
                                                Details
                                            </a>

                                            <a asp-action="Edit" asp-controller="Movies" asp-route-id="@item.Id" class="btn btn-primary">
                                                <i class="bi bi-pencil-square"></i>
                                                Edit
                                            </a>
                                            <a asp-action="Delete" asp-controller="Movies" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="bi bi-trash3"></i>
                                                Delete
                                            </a>
                                                
                                               
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            }
       </div>
    }
</div>
<a class="btn btn-primary" asp-action="Creat" asp-controller="Movies"> <i class="bi bi-plus-circle"></i> Add movie</a>
